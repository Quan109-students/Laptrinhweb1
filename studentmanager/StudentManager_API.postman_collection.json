{
  "info": {
    "name": "Student Manager API",
    "description": "Collection để test API Student Manager (local hoặc Render)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health / Test",
      "item": [
        {
          "name": "Hello",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/hello",
            "description": "Test đơn giản - trả về chuỗi Hello Spring Boot API"
          }
        },
        {
          "name": "Greet (query name)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/greet?name=Nam",
            "description": "GET với query param: name"
          }
        },
        {
          "name": "Test DB Connection",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/test-connection",
            "description": "Kiểm tra kết nối database và thông tin driver"
          }
        }
      ]
    },
    {
      "name": "Students",
      "item": [
        {
          "name": "Get All Students",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/students",
            "description": "Lấy danh sách tất cả sinh viên"
          }
        },
        {
          "name": "Get One Student (first)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/student",
            "description": "Lấy sinh viên đầu tiên trong DB"
          }
        },
        {
          "name": "Get Student By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/students/1",
            "description": "Lấy sinh viên theo ID (đổi 1 thành ID thật)"
          }
        },
        {
          "name": "Search Students by name",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/students/search?name=Nguyen",
            "description": "Tìm theo tên (query: name)"
          }
        },
        {
          "name": "Search Students by id",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/students/search?id=1",
            "description": "Tìm theo ID (query: id)"
          }
        },
        {
          "name": "Create Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Nguyễn Văn Test\",\n  \"gender\": \"Nam\",\n  \"birthDate\": \"2000-05-15\",\n  \"major\": \"CNTT\",\n  \"address\": \"Hà Nội\"\n}"
            },
            "url": "{{base_url}}/api/students",
            "description": "Thêm sinh viên mới. fullName bắt buộc."
          }
        },
        {
          "name": "Update Student",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Nguyễn Văn Đã Sửa\",\n  \"gender\": \"Nam\",\n  \"birthDate\": \"2000-05-15\",\n  \"major\": \"CNTT\",\n  \"address\": \"TP.HCM\"\n}"
            },
            "url": "{{base_url}}/api/students/1",
            "description": "Cập nhật sinh viên (đổi 1 thành ID cần sửa)"
          }
        },
        {
          "name": "Delete Student",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{base_url}}/api/students/1",
            "description": "Xóa sinh viên theo ID (đổi 1 thành ID cần xóa)"
          }
        }
      ]
    }
  ]
}
